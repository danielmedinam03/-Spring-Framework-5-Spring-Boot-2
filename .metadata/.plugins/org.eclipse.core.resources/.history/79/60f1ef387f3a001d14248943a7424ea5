package com.bolsadeideas.springboot.web.app.controllers;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;

@Controller
public class HomeController {

	/*
	 * Redirecciona la p치gina a el app/index, cambia la URL en el navegador ya que redirige a una 
	 * nueva p치gina y petici칩n HTTP
	 * */
	
	@GetMapping("/")
	public String home() {
		//return "redirect:https://www.google.com"; * Redirige a google
		return "forward:/app/index"; /*Es la mejor opci칩n para un home, por que no cambia la ruta, rutas propias del
		proyecto*/
		//return "redirect:/app/index";
	}
	
}
